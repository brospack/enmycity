<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="conversation">
    <item name="android:padding">12dp</item>
  </style>

  <style name="conversation.owner.cardView"
         parent="CardView">
    <item name="android:layout_marginStart">48dp</item>
    <item name="android:layout_marginEnd">16dp</item>
    <item name="android:backgroundTint">@color/messageOwner</item>
    <item name="cardCornerRadius">12dp</item>
  </style>

  <style name="conversation.guest.cardView"
         parent="CardView">
    <item name="android:layout_marginEnd">48dp</item>
    <item name="android:layout_marginStart">16dp</item>
    <item name="android:backgroundTint">@color/messageGuest</item>
    <item name="cardCornerRadius">12dp</item>
  </style>

  <style name="conversation.owner">
    <item name="android:layout_marginStart">48dp</item>
    <item name="android:layout_marginEnd">16dp</item>
    <item name="android:background">@drawable/message_owner_background</item>
    <item name="android:layout_gravity">end</item>
  </style>

  <style name="conversation.guest">
    <item name="android:layout_marginEnd">48dp</item>
    <item name="android:layout_marginStart">16dp</item>
    <item name="android:background">@drawable/message_guest_background</item>
  </style>

  <style name="input_message">
    <item name="android:background">@drawable/conversation_input_message_background</item>
    <item name="android:inputType">textMultiLine</item>
    <item name="android:layout_marginStart">16dp</item>
    <item name="android:paddingStart">16dp</item>
    <item name="android:paddingEnd">16dp</item>
    <item name="android:scrollbars">vertical</item>
    <item name="android:minLines">1</item>
    <item name="android:maxLines">4</item>
  </style>
</resources>