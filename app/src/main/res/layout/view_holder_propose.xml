<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewUserProfile_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:elevation="3dp"
    app:cardCornerRadius="4dp"
    >
  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      >
    <ImageView
        android:id="@+id/viewPropose_avatar_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="TODO"
        />
    <TextView
        android:id="@+id/viewPropose_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/viewPropose_avatar_imageView"
        android:text="HOLA"
        />
    <TextView
        android:id="@+id/viewPropose_status_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewPropose_name_textView"
        android:layout_toEndOf="@+id/viewPropose_avatar_imageView"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/viewPropose_accept_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/viewPropose_name_textView"
        android:layout_toEndOf="@+id/viewPropose_avatar_imageView"
        android:text="Aceptar"
        android:visibility="gone"
        />
  </RelativeLayout>

</android.support.v7.widget.CardView>
