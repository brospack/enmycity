<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
    >

  <ImageView
      android:layout_width="221dp"
      android:layout_height="192dp"
      app:srcCompat="@android:color/background_light"
      android:id="@+id/profile_avatar_imageView"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="8dp"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="8dp"
      />
  <TextView
      android:text="TextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/profile_name_textView"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/profile_avatar_imageView"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="8dp"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="8dp"
      />
  <EditText
      android:layout_width="215dp"
      android:layout_height="72dp"
      android:inputType="textPersonName"
      android:text="Name"
      android:ems="10"
      android:id="@+id/profile_description_editText"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/profile_name_textView"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="8dp"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="8dp"
      />
  <android.support.design.widget.FloatingActionButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:clickable="true"
      app:srcCompat="@android:drawable/ic_menu_send"
      android:id="@+id/profile_contact_floatingActionButton"
      android:layout_marginBottom="36dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="40dp"
      />

</android.support.constraint.ConstraintLayout>