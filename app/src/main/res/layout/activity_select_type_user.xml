<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
    >

  <ImageView
      android:layout_width="196dp"
      android:layout_height="192dp"
      app:srcCompat="@color/colorPrimary"
      android:id="@+id/selectTypeUser_avatar_imageView"
      android:layout_marginTop="60dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="8dp"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="8dp"
      android:contentDescription="TODO"
      />
  <TextView
      android:layout_width="164dp"
      android:layout_height="33dp"
      android:id="@+id/selectTypeUser_name_textView"
      android:layout_marginTop="36dp"
      app:layout_constraintTop_toBottomOf="@+id/selectTypeUser_avatar_imageView"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="8dp"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="8dp"
      />
  <Switch
      android:text="local"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/selectTypeUser_local_switch"
      android:layout_marginTop="24dp"
      app:layout_constraintTop_toBottomOf="@+id/selectTypeUser_name_textView"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="8dp"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="8dp"
      android:checked="true"
      />
  <Switch
      android:text="viajero"
      android:layout_width="wrap_content"
      android:layout_height="25dp"
      android:id="@+id/selectTypeUser_traveller_switch"
      android:layout_marginTop="24dp"
      app:layout_constraintTop_toBottomOf="@+id/selectTypeUser_local_switch"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="8dp"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="8dp"
      app:layout_constraintVertical_bias="0.0"
      />

  <android.support.design.widget.FloatingActionButton
      android:layout_width="47dp"
      android:layout_height="35dp"
      android:clickable="true"
      android:id="@+id/selectTypeUser_next_floatingActionButton"
      android:layout_marginBottom="28dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="32dp"
      />
</android.support.constraint.ConstraintLayout>