<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

  <ProgressBar
      android:id="@+id/conversation_progressBar"
      style="?android:attr/progressBarStyle"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="8dp"
      tools:visibility="gone"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:id="@+id/lll"
      >
    <EditText
        android:id="@+id/conversation_message_editText"
        style="@style/input_message"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:paddingStart="8dp"
        android:paddingTop="16dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/conversation_sendMessage_floatingActionButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:clickable="true"
        app:srcCompat="@android:color/holo_green_dark"
        />
  </LinearLayout>

  <android.support.v7.widget.RecyclerView
      android:id="@+id/conversation_messages_recyclerView"
      android:layout_width="match_parent"
      android:layout_height="400dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:layout_above="@+id/lll"
      />
</RelativeLayout>