<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/com_facebook_button_login_silver_background_color_pressed"
              android:layout_marginTop="10dp"
              android:layout_marginStart="10dp"
              android:layout_marginEnd="10dp"
              android:layout_marginBottom="10dp"
    >
  <android.support.v7.widget.CardView
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:id="@+id/viewUserProfile_cardView"
      android:layout_gravity="center"
      android:elevation="3dp"
      app:cardCornerRadius="4dp"
      >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewUserProfile_avatar_imageView"
        android:contentDescription="TODO"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewUserProfile_name"
        android:text="HOLA"
        />
  </android.support.v7.widget.CardView>

</LinearLayout>